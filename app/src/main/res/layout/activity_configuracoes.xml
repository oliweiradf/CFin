<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.oliweira.cfin.ConfiguracoesActivity"
    android:background="@color/colorBlueRich">

    <!-- Campos tipos contas fixas-->
    <TextView
        android:id="@+id/tvTipoContaFixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:text="Tipo Contas Fixas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/swtTipoContaFixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTipoContaFixa"
        android:layout_alignParentEnd="true"
        android:text="Off/On"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvComentTipoContaFixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTipoContaFixa"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/swtTipoContaFixa"
        android:text="Usa o tipo de contas padrões do sistema."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite"/>

    <!-- Campos salario fixo -->
    <TextView
        android:id="@+id/tvSalarioFixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComentTipoContaFixa"
        android:layout_alignParentStart="true"
        android:text="Salário Fixo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <Switch
        android:id="@+id/swtSalarioFixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvSalarioFixo"
        android:layout_alignParentEnd="true"
        android:text="Off/On"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvComentSalarioFixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSalarioFixo"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/swtSalarioFixo"
        android:text="Usa o salário fixo para todo sistema."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvCadastrarSalarioFixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComentSalarioFixo"
        android:layout_alignParentStart="true"
        android:text="Cadastrar Salário Fixo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorYellow"
        android:textStyle="bold" />

    <!-- Campos backup automatico -->
    <TextView
        android:id="@+id/tvBackupAutomatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComentSalarioFixo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:text="Backup Automático"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/swtBackupAutomatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvBackupAutomatico"
        android:layout_alignParentEnd="true"
        android:text="Off/On"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvComentBackupAutomatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvBackupAutomatico"
        android:layout_alignBottom="@+id/swtBackupAutomatico"
        android:text="Faz backup automático mensalmente."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite"/>

    <!-- Campos cartao -->
    <TextView
        android:id="@+id/tvCartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComentBackupAutomatico"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:text="Cartão"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/swtCartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCartao"
        android:layout_alignParentEnd="true"
        android:text="Off/On"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvComentCartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCartao"
        android:layout_alignBottom="@+id/swtCartao"
        android:text="Usar cartão nas compras."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/tvCadastrarCartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvComentCartao"
        android:layout_alignParentStart="true"
        android:text="Cadastrar Cartão"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorYellow"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSalvarConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Configurações"
        android:layout_below="@+id/tvCadastrarCartao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
